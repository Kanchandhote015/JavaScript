function countVowels(str){
    let count = 0;
    for (const char of str){
        console.log(char);
        if (
            char === "a" ||
            char === "e" ||
            char === "i" ||
            char === "o" ||
            char === "u" 
        ){
            count++;
        }
    }
    console.log(str.length);
    console.log("The number of vowels are",count);
}
countVowels("XYZ studies the IT Engineering");
countVowels("Engineering");
